<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="co.ommu.inlis">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".IntroActivity"
            android:label="@string/app_name" />

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".TrackActivity"
            android:label="@string/title_track" />
        <activity
            android:name=".SearchActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/title_search"
            android:windowSoftInputMode="stateHidden|adjustResize"></activity>
        <activity
            android:name=".BookDetailActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/title_book_detail"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".SearchResultActivity"
            android:configChanges="orientation|keyboardHidden"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize" />
        <activity
            android:name=".SearchAdvancedActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/title_search_advance"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize" />
        <activity
            android:name=".TrackMemberActivity"
            android:label="@string/title_track" />
        <activity
            android:name=".RegisterActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/title_registrasi"
            android:screenOrientation="sensorPortrait"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize"></activity>

        <activity
            android:name=".WelcomeDrawerActivity"
            android:label="@string/app_name"></activity>

        <!-- [START firebase_service] -->
        <service android:name=".components.MyFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <!-- [END firebase_service] -->
        <!-- [START firebase_iid_service] -->
        <service android:name=".components.MyFirebaseInstanceIDService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>
        <!-- [END firebase_iid_service] -->


    </application>

</manifest>
